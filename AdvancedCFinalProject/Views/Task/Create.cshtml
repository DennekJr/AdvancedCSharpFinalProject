@model AdvancedCFinalProject.Models.DeveloperTask

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeveloperTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionRate" class="control-label"></label>
                <input asp-for="CompletionRate" class="form-control" />
                <span asp-validation-for="CompletionRate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" asp-items="@ViewBag.YourEnums"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="selectedDev" class="form-control" asp-items="ViewBag.Developers"></select>
                @*@Html.DropDownListFor(model => model.TaskId, (IEnumerable<SelectListItem>)ViewBag.Developer, "Please select")*@
            </div>
            <div class="form-group">
                @*<a asp-controller="Task" asp-action="Create" asp-route-Pid="@ViewBag.ProjectId" style="display: none">Create new Task</a>*@

                <input type="submit" value="Create" class="btn btn-primary" asp-route-Pid="@ViewBag.ProjectId"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="background-color: #333; border: none; border-radius: 5px; color: white; padding: 5px 10px; text-decoration: none">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
