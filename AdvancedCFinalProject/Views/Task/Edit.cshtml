@model AdvancedCFinalProject.Models.DeveloperTask

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeveloperTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionRate" class="control-label"></label>
                <input asp-for="CompletionRate" class="form-control" />
                <span asp-validation-for="CompletionRate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                @Html.DropDownList("YourProperty", (ViewBag.YourEnums as SelectList))
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            @if (Model.IsComplete)
            {
                <div class="form-group">
                    <label asp-for="stringComment" class="control-label"></label>
                    <input asp-for="stringComment" class="form-control" />
                    <span asp-validation-for="stringComment" class="text-danger"></span>
                </div>
            } else
            {
        <div class="form-group">
            <label asp-for="UrgentComment" class="control-label"></label>
            <input asp-for="UrgentComment" class="form-control" />
            <span asp-validation-for="UrgentComment" class="text-danger"></span>
        </div>
            }
            <div class="form-group">
                <label asp-for="DeveloperId" class="control-label"></label>
                <select asp-for="DeveloperId" class="form-control" asp-items="ViewBag.DeveloperId"></select>
                <span asp-validation-for="DeveloperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
