@model AdvancedCFinalProject.Models.Project

@{
    ViewData["Title"] = "ProjDetails";
}

<h1>ProjDetails</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Tasks
        </dt>
        @foreach(var task in @Model.Tasks)
            {
               <dd class = "col-sm-10">
                   @task.Title
               </dd> 
            }

    </dl>
</div>
<div>

</div>
