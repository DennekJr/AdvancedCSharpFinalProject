@model AdvancedCFinalProject.Models.Company

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <td>
    </td>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dt class="col-sm-2">
            @Model.Title
        </dt>
        <dd class="col-sm-10">
            @foreach (Project proj in Model.Projects)
            {
                <li>@proj.Title</li>
                <li>@proj.Content</li>
                <a asp-controller="Task" asp-action="Create" asp-route-id="@proj.ProjectId">Create new Task</a>

                @foreach (DeveloperTask task in proj.Tasks)
                {
                    <a asp-controller="Task" asp-action="Edit" asp-route-kid="@task.TaskId">Edit</a>
                    <a asp-controller="Task" asp-action="Details" asp-route-id="@task.TaskId">Details</a>
                    <a asp-controller="Task" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CompanyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
